<div class="row clear">
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
  <div class="col-md-8"><h4><%=@user.first_name %> <%=@user.last_name %></h4></div>
</div>

<div class="row clear">
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
  <div class="col-md-8">About Me: <%=@user.description%></div>
</div>

<div class="row clear">
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
  <div class="col-md-8">Member since <%=@user.created_at%></div>
</div>

<div id='divider'></div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>

  <div class="col-md-4">
    <table>
      <th>Questions</th>
      <% @user.questions.each do |question| %>
        <tr>
          <td><span class="votes"> <%=question.votes.length%></span> | <a href="/questions/<%=question.id%>"> <%=question.title%></a></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="col-md-4">
    <table>
      <th>Answers</th>
      <% @user.answers.each do |answer| %>
        <tr>
          <td><span class="votes"> <%=answer.votes.length%></span> | '<%=answer.description%>' - <a href="/questions/<%=answer.question.id%>"><%= answer.question.title %></a></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
</div>
