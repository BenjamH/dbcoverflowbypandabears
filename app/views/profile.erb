<p class='clear'>
  <div>
    <h4><%=@user.first_name %> <%=@user.last_name %></h4>
  </div>
  <div>
    About Me: <%=@user.description%>
  </div>
  <div>
    Member since <%=@user.created_at%>
  </div>
</p>

<p class="subtitle">
  <h5>Questions</h5>
</p>

<ul class="questions">
  <% @user.questions.each do |question| %>
    <li>
      <span class="votes"> <%=question.votes.length%></span> | <a href="/questions/<%=question.id%>"> <%=question.title%></a>
    </li>
  <% end %>
</ul>

<p class="subtitle">
  <h5>Answers</h5>
</p>

<ul class="answers">
  <% @user.answers.each do |answer| %>
    <li>
      <span class="votes"> <%=answer.votes.length%></span> | <a href="/questions/<%=answer.question.id%>"><%=answer.description%></a>
    </li>
  <% end %>
</ul>

