<section id="question-container" class='clear'>
  <div id="question-header">
    <p>
    <span id="question-title"><%= @question.title %></span>
    <%  %>
    <span id="question-author"><%= @question.user.first_name%></span>
    <span id="question-date">Created at <%= @question.created_at.strftime("%m/%d/%Y") %></span>
    </p>
    <!-- BELOW: coordinate route link with slice 4  -->
    Total votes: <span id="total-question-votes"><%= @question.all_votes %></span>


    <% if logged_in? %>
      <a href='/questions/<%=@question.id %>/down_vote' class="question-vote">down</a>
    <a href='/questions/<%=@question.id %>/up_vote' class="question-vote">&uarr;</a>
    <% end %>
  </div>
  <div id="question-description">
    <p><%= @question.description %></p>
  </div>
</section>

<!-- Placeholder -->

<h3>Answers</h3>
<section id="answer-container">
 <ul id="answers">
 <% @question.answers.each do |answer| %>

    <%= erb :_answer, locals: { answer: answer} %>

        <!-- BELOW: coordinate route link with slice 4  -->
        Total votes: <span id="total-answer-votes"><%= answer.all_votes %></span>


        <% if logged_in? %>
        <a href='/answers/<%=answer.id %>/up_vote' class="answer-vote">&uarr;</a>
        <a href='/answers/<%=answer.id %>/down_vote' class="answer-vote">down</a>
        <% end %>

      </li>
    </article>
  <% end %>
 </div>
</section>

<% if logged_in? %>
  <div class="col-md-2"></div><div class="col-md-8"><h3>Post New Answer</h3></div><div class="col-md-2"></div>
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <div class="form-group">
  <section id="new-answer-container">
    <form method="post" action="/questions/<%=@question.id%>/answers">
      <textarea class="form-control" rows="3" name="description" placeholder="Post your answer here"></textarea>
      <input type="submit" value="Submit">
    </form>
  </section>
</div></div>
<div class="col-md-2"></div>
<% end %>
